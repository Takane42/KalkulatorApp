<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonCalc" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">@dimen/_60sdp</item>
        <item name="android:background">@drawable/drawable_buttonpinggir</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    
    <style name="textViewCalc" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/_40ssp</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
    </style>
</resources>